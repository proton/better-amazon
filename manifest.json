{
  "manifest_version": 3,
  "name": "Better Amazon Experience",
  "version": "1.4.6",
  "description": "Filter Amazon products by negative words and price",
  "permissions": [],
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png",
    "512": "images/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{80225003-6f08-4de1-8454-c09855aa95fd}"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.cn/*",
        "https://www.amazon.co.jp/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.com.au/*",
        "https://www.amazon.de/*",
        "https://www.amazon.es/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.in/*",
        "https://www.amazon.it/*",
        "https://www.amazon.nl/*",
        "https://www.amazon.com.mx/*",
        "https://www.amazon.sg/*",
        "https://www.amazon.se/*",
        "https://www.amazon.sa/*",
        "https://www.amazon.ae/*",
        "https://www.amazon.com.tr/*",
        "https://www.amazon.com.br/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.cn/*",
    "https://www.amazon.co.jp/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.com.au/*",
    "https://www.amazon.de/*",
    "https://www.amazon.es/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.in/*",
    "https://www.amazon.it/*",
    "https://www.amazon.nl/*",
    "https://www.amazon.com.mx/*",
    "https://www.amazon.sg/*",
    "https://www.amazon.se/*",
    "https://www.amazon.sa/*",
    "https://www.amazon.ae/*",
    "https://www.amazon.com.tr/*",
    "https://www.amazon.com.br/*"
  ]
}

